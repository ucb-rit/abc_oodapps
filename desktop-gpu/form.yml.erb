---
cluster:
  - "abc"

form:
  - bc_vnc_idle
  - desktop
  - job_name
  - slurm_partition
  - slurm_account
  - qos_name
  - bc_num_hours
  - node_type
  - num_cores
  - num_gpus
  - bc_vnc_resolution
#  - raw_data

attributes:
 desktop: "xfce"

 bc_vnc_idle: 0

 bc_vnc_resolution:
    required: true

 node_type: 
    widget: select
    lable: "Please choose CPU or GPU"
    help: "This defines where to launch desktop."
    options:
      - [ "CPU", "CPU" ]
      - [ "FIONA", "fiona" ]
      - [ "GPU:Titan", "TITAN" ]
      - [ "GPU:A100", "A100" ]
      - [ "GPU:A6000", "A6000"]

 job_name:
    label: "Name of the job"
    value: "desktop"

 slurm_partition: "abc"
 slurm_account: "co_abc"
 
 qos_name:
    widget: select
    label: "Choose your QoS"
    help: "Max Wall Clock Time is 48 hours for abc_normal and 1 hour for abc_debug. To run a session for more than 48 hours, choose abc_high if you have access to that qos."
    options:
      - [ "abc_normal", "abc_normal" ]
      - [ "abc_high", "abc_high" ] 
      - [ "abc_debug", "abc_debug" ]
 bc_num_hours:
    widget: "number_field"
    label: "Wall Clock Time"
    help: "How many hours do you want to run the desktop application?"
    value: 1
    min: 1
    max: 168

 num_cores:
    widget: "number_field"
    label: "Specify number of cores (CPU launch only)"
    value: 1
    min: 1
    max: 24
    step: 1
    id: 'num_cores'

 num_gpus:
    widget: "number_field"
    label: "Specify number of GPUs with GPU launch: Max(A6000)=4, Max(A100)=4, Max(Titan)=4"
    value: 1
    min: 0
    max: 4
    step: 1
    id: 'num_gpus'
