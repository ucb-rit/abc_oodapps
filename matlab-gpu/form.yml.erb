<%-
  cmd = "/usr/bin/sacctmgr show associations user=$USER -P -n format=partition,account,qos"
  begin
    output, status = Open3.capture2e(cmd)
    if status.success?
      raw_data = output
    else
      raise output
    end
  rescue => e
    qos = []
    qerror = e.message.strip
  end
-%>

---
cluster:
  - "abc"
#cacheable: "false"

form:
  - job_name
  - versions
  - slurm_partition
  - slurm_account
  - qos_name
  - node_type
  - bc_num_hours
  - num_cpu
  - bc_vnc_resolution
  - num_cores
  - num_gpus
  - raw_data
  - bc_email_on_started

attributes:
  slurm_partition: "abc"
  slurm_account: "co_abc"
  qos_name: "abc_normal"

  job_name:
    label: "Name of the job"
    value: "OOD_MatLab_"

  versions:
    widget: select
    label: "MATLAB Versions"
    help: "This defines the version of MATLAB to load."
    options:
      - [ "R2021a", "matlab/r2021a" ]
      - [ "R2020b", "matlab/r2020b" ]
      - [ "R2020a", "matlab/r2020a" ]
      - [ "R2019a", "matlab/r2019a" ]
      - [ "R2017b", "matlab/r2017b" ]
      - [ "R2016b", "matlab/r2016b" ]
     
  slurm_partition: 
    widget: select 
    label: "SLURM Partition"
    help: "Choose the name of the SLURM Partition in which you want to launch this MatLab Server"
    required: true

  
  node_type:
    widget: select
    label: "Node type"  
    options: 
     - "CPU"
     - "GPU"

  bc_vnc_resolution:
    required: true
 
  num_cpu:
    label: "Number of CPU Nodes"
    help: "Please specify number of CPU nodes"
    value: 1
    max: 10
    step: 1

  bc_num_hours:
    widget: "number_field"
    label: "Wall Clock Time"
    help: "How many hours do you want to run this MatLab?"
    value: 1
    min: 1
    max: 144
    step: 1
    id: 'num_hours'

 
  num_cores:
    widget: "number_field"
    label: "Number of cores"
    value: 1
    min: 0
    max: 48
    step: 1
    id: 'num_cores'

  num_gpus:
    widget: "number_field"
    label: "Number of GPU cards if GPU is requested"
    value: 1
    min: 0
    max: 3
    step: 1
    id: 'num_gpus'

  raw_data:
    label: "Account associations for use by JavaScript"
    widget: hidden_field
    value: "<%= raw_data %>"
