<%-
  ppn = num_cores.blank? ? 20 : num_cores.to_i
  gpu = num_gpus.blank? ? 1 : num_gpus.to_i
  walltime = (bc_num_hours.to_i * 60)
  
  case node_type
  when "GPU"
     ppn = (num_gpus.to_i * 5) 
     
     slurm_args = [ "--nodes", "#{num_cpu}", "--ntasks", "#{ppn}", "--time", "#{walltime}", "--partition", "#{slurm_partition}", "--qos", "#{qos_name}", "--job-name", "#{job_name}", "--account", "#{slurm_account}", "--gres", "gpu:titan:#{gpu}", "--exclude", "n0[000-023].abc[0]" ]
  
  when "CPU"
     slurm_args = [ "--nodes", "#{num_cpu}", "--partition", "#{slurm_partition}", "--time", "#{walltime}", "--qos", "#{qos_name}", "--job-name", "#{job_name}", "--account", "#{slurm_account}" ]
    
  end
%>
---
batch_connect:
  template: vnc
script:
  native:
  <%- slurm_args.each do |arg| %>
    - "<%= arg %>"
  <%- end %>
