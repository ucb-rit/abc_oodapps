---
cluster:
  - "abc"
#cacheable: "false"

form:
  - job_name
  - versions
  - slurm_partition
  - slurm_account
  - qos_name
  - node_type
  - bc_num_hours
  - num_cpu
  - bc_vnc_resolution
  - num_cores
#  - bc_email_on_started

attributes:
 # node_type: "GPU"  
 # node_type: "CPU"

  job_name:
    label: "Name of the job"
    value: "OOD_MatLab_"

  versions:
    widget: select
    label: "MATLAB Versions"
    help: "This defines the version of MATLAB to load."
    options:
      - [ "R2021a", "matlab/r2021a" ]
      - [ "R2020b", "matlab/r2020b" ]
      - [ "R2020a", "matlab/r2020a" ]
      - [ "R2019a", "matlab/r2019a" ]
      - [ "R2017b", "matlab/r2017b" ]
      - [ "R2016b", "matlab/r2016b" ]
     
  node_type:
    widget: select
    label: "Node type"  
    options: 
     - "CPU"
#     - "GPU"

  bc_vnc_resolution:
     required: true
  
  slurm_partition: "abc"
  slurm_account: "co_abc"
  qos_name: "abc_normal"
 
  num_cpu:
    label: "Number of CPU Nodes"
    help: "Please specify number of CPU nodes"
    value: 1
    max: 10
    step: 1

  bc_num_hours:
    widget: "number_field"
    label: "Wall Clock Time"
    help: "How many hours do you want to run this MatLab?"
    value: 1
    min: 1
    max: 144
    step: 1
    id: 'num_hours'

 
  num_cores:
    widget: "number_field"
    label: "Number of cores"
    value: 1
    min: 0
    max: 48
    step: 1
    id: 'num_cores'


